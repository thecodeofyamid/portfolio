---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <link rel="icon" href="/yamid-tarot.png" type="image/x-icon" />
    
    <!-- Open Graph Meta Tags for Social Sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://www.yamidrodriguez.com/tarot.jpg" /> <!-- AsegÃºrate de reemplazar esta ruta con la imagen correcta -->
    <meta property="og:url" content="www.yamidrodriguez.com" /> <!-- Reemplaza con la URL de tu sitio -->
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.yamidrodriguez.com/tarot.jpg" />

    <!-- Preconnect para mejorar rendimiento de carga de fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&family=Libre+Baskerville&display=swap" rel="stylesheet">
    
    <style is:global>
      :root {
        --font-raleway: 'Raleway', system-ui, sans-serif;
        --font-libre: 'Libre Baskerville', serif;
      }
      
      body {
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
      }
      
      @media (max-width: 640px) {
        html {
          font-size: 14px;
        }
      }
      
      ::selection {
        background: rgba(147, 51, 234, 0.1);
      }
      .whatsapp-button {
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        text-decoration: none;
        color: #ffffff;
        border-radius: 9999px;
        background: linear-gradient(to right, #34D399, #3B82F6, #9333EA);
        box-shadow: 0 8px 20px -4px rgba(147, 51, 234, 0.5);
        transition: all 0.3s ease;
        animation: floating 3s ease-in-out infinite;
        overflow: hidden;
      }

      .whatsapp-button:hover {
        transform: scale(1.05) translateY(-2px);
        box-shadow: 0 0 25px rgba(66, 245, 135, 0.7);
        animation-play-state: paused;
      }

      .button-glow {
        position: absolute;
        inset: 0;
        border-radius: 9999px;
        background: linear-gradient(to right, #34D399, #3B82F6, #9333EA);
        filter: blur(10px);
        opacity: 0.5;
        transition: all 0.3s ease;
      }

      .whatsapp-button:hover .button-glow {
        opacity: 1;
        transform: scale(1.1);
      }

      .button-content {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        animation: floating-reverse 3s ease-in-out infinite;
      }

      .whatsapp-button:hover .button-content {
        animation-play-state: paused;
      }

      .icon-whatsapp {
        height: 1.5rem;
        width: 1.5rem;
        color: #ffffff;
      }

      @keyframes floating {
        0% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-10px);
        }
        100% {
          transform: translateY(0px);
        }
      }

      @keyframes floating-reverse {
        0% {
          transform: translateY(0px) scale(1);
        }
        50% {
          transform: translateY(0px) scale(0.985);
        }
        100% {
          transform: translateY(0px) scale(1);
        }
      }

      /* Estilo para los botones del formulario */
      button[type="submit"] {
        animation: floating 4s ease-in-out infinite;
        transition: all 0.3s ease;
      }

      button[type="submit"]:hover {
        transform: scale(1.05) translateY(-2px);
        animation-play-state: paused;
      }

      /* Estilos para los enlaces del footer */
      footer a {
        position: relative;
        transition: all 0.3s ease;
      }

      footer a:hover {
        animation: gentle-float 2s ease-in-out infinite;
      }

      @keyframes gentle-float {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-3px);
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>