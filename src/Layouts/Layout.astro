---
interface Props {
  title: string;
  description?: string;
}
import ThemeToggle from '../components/ThemeToggle';
const { title, description } = Astro.props;
---
<!doctype html>
<html lang="es" class="scroll-smooth" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <link rel="icon" href="/yamid-tarot.png" type="image/x-icon" />
    
    <!-- Open Graph Meta Tags for Social Sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://www.yamidrodriguez.com/tarot.jpg" /> <!-- Asegúrate de reemplazar esta ruta con la imagen correcta -->
    <meta property="og:url" content="www.yamidrodriguez.com" /> <!-- Reemplaza con la URL de tu sitio -->
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.yamidrodriguez.com/tarot.jpg" />

    <!-- Preconnect para mejorar rendimiento de carga de fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&family=Libre+Baskerville&display=swap" rel="stylesheet">
    
    <style is:global>
      :root {
        --font-raleway: 'Raleway', system-ui, sans-serif;
        --font-libre: 'Libre Baskerville', serif;
        
        /* Colores de la Marca General */
        --color-general-deep-blue: #003366; /* Azul profundo */
        --color-general-mustard-yellow: #FFDB58; /* Amarillo mostaza */
        --color-general-emerald-green: #50C878; /* Verde esmeralda */
        --color-general-light-gray: #D3D3D3; /* Gris claro */
        --color-general-lime-green: #BFFF00; /* Verde lima suave */

        /* Submarca Tech */
        --color-tech-primary: #00FFFF; /* Cyan brillante */
        --color-tech-secondary: #D3D3D3; /* Gris claro */
        --color-tech-dark-blue: #001f3f; /* Azul oscuro */

        /* Submarca Tarot */
        --color-tarot-primary: #9333EA; /* Púrpura */
        --color-tarot-secondary: #333333; /* Gris oscuro */
        --color-tarot-accent: #FFDB58; /* Amarillo */

        /* Submarca Photography */
        --color-photography-primary: #001f3f; /* Azul oscuro */
        --color-photography-accent: #ff6f61; /* Coral */
        --color-photography-background: #98ff98; /* Verde menta */

        /* Submarca Filosofía */
        --color-philosophy-primary: #0ab9e6; /* Azul celeste */
        --color-philosophy-secondary: #023047; /* Azul oscuro profundo */
        --color-philosophy-accent: #8ecae6; /* Azul claro */
        }
        [data-theme='dark'] {
          --color-general-deep-blue: #001a33; /* Azul profundo para modo oscuro */
          --color-general-mustard-yellow: #FFCC00; /* Amarillo mostaza un poco más oscuro */
          --color-general-emerald-green: #3b9d64; /* Verde esmeralda más oscuro */
          --color-general-light-gray: #2c2c2c; /* Gris oscuro para fondo */
          --color-general-lime-green: #a3ff00; /* Verde lima más suave */

          --color-tech-primary: #008080; /* Cyan más oscuro */
          --color-tech-secondary: #4d4d4d; /* Gris oscuro */
          --color-tech-dark-blue: #001020; /* Azul muy oscuro */

          --color-tarot-primary: #6b21a8; /* Púrpura más oscura */
          --color-tarot-secondary: #1a1a1a; /* Gris muy oscuro */
          --color-tarot-accent: #e6b800; /* Amarillo más tenue */

          --color-photography-primary: #000c1a; /* Azul muy oscuro */
          --color-photography-accent: #d45550; /* Coral más oscuro */
          --color-photography-background: #80cc80; /* Verde menta más oscuro */

          --color-philosophy-primary: #086f9e; /* Azul celeste más oscuro */
          --color-philosophy-secondary: #011627; /* Azul oscuro muy profundo */
          --color-philosophy-accent: #609cbf; /* Azul claro más oscuro */
        }

      
      body {
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
      }
      
      @media (max-width: 640px) {
        html {
          font-size: 14px;
        }
      }
      
      ::selection {
        background: rgba(147, 51, 234, 0.1);
      }
      .whatsapp-button {
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        text-decoration: none;
        color: #ffffff;
        border-radius: 9999px;
        background: linear-gradient(to right, var(--color-tarot-primary), #3B82F6, var(--color-tech-primary));
        box-shadow: 0 8px 20px -4px rgba(147, 51, 234, 0.5);
        transition: all 0.3s ease;
        animation: floating 3s ease-in-out infinite;
        overflow: hidden;
      }

      .whatsapp-button:hover {
        transform: scale(1.05) translateY(-2px);
        box-shadow: 0 0 25px rgba(66, 245, 135, 0.7);
        animation-play-state: paused;
      }

      .button-glow {
        position: absolute;
        inset: 0;
        border-radius: 9999px;
        background: linear-gradient(to right, var(--color-tarot-primary), #3B82F6, var(--color-tech-primary));
        filter: blur(10px);
        opacity: 0.5;
        transition: all 0.3s ease;
      }

      .whatsapp-button:hover .button-glow {
        opacity: 1;
        transform: scale(1.1);
      }

      .button-content {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        animation: floating-reverse 3s ease-in-out infinite;
      }

      .whatsapp-button:hover .button-content {
        animation-play-state: paused;
      }

      .icon-whatsapp {
        height: 1.5rem;
        width: 1.5rem;
        color: #ffffff;
      }

      @keyframes floating {
        0% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-10px);
        }
        100% {
          transform: translateY(0px);
        }
      }

      @keyframes floating-reverse {
        0% {
          transform: translateY(0px) scale(1);
        }
        50% {
          transform: translateY(0px) scale(0.985);
        }
        100% {
          transform: translateY(0px) scale(1);
        }
      }

      /* Estilo para los botones del formulario */
      button[type="submit"] {
        animation: floating 4s ease-in-out infinite;
        transition: all 0.3s ease;
      }

      button[type="submit"]:hover {
        transform: scale(1.05) translateY(-2px);
        animation-play-state: paused;
      }

      /* Estilos para los enlaces del footer */
      footer a {
        position: relative;
        transition: all 0.3s ease;
      }

      footer a:hover {
        animation: gentle-float 2s ease-in-out infinite;
      }

      @keyframes gentle-float {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-3px);
        }
      }
    </style>
  </head>
  <body>
    <ThemeToggle client:load />
    <slot />
  </body>
</html>
