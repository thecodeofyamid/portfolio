---
import IdeaForm from '../../components/IdeaForm.jsx';
import ThemeToggle from '../../components/ThemeToggle.jsx';
import Layout from '../../Layouts/Layout.astro';
import { FaWhatsapp } from 'react-icons/fa';

const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '#', text: 'Reglas del grupo' },
  { href: '#', text: 'Contacto' }
];
---

<Layout 
  title="Ideas para la Comunidad | TAROT, CAF√â Y M√öSICA"
  description="Comparte ideas para mejorar nuestra comunidad de WhatsApp"
>
  <div class="min-h-screen bg-slate-50 dark:bg-gray-900 transition-colors duration-300">
    <!-- Fondo decorativo sutil -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden">
      <div class="absolute top-[-10%] right-[-5%] w-[500px] h-[500px] rounded-full opacity-30 blur-3xl"
        style="background: linear-gradient(135deg, rgba(147,51,234,0.05), rgba(59,130,246,0.05))">
      </div>
      <div class="absolute bottom-[-10%] left-[-5%] w-[500px] h-[500px] rounded-full opacity-30 blur-3xl"
        style="background: linear-gradient(225deg, rgba(147,51,234,0.05), rgba(59,130,246,0.05))">
      </div>
    </div>

    <div class="relative">
      <!-- Theme Toggle con posici√≥n fija -->
      <div class="fixed top-4 right-4 z-50">
        <ThemeToggle client:load />
      </div>

      <!-- Header con dise√±o moderno -->
      <header class="container mx-auto px-4 pt-20 pb-16">
        <div class="max-w-3xl mx-auto">
          <div class="flex flex-col items-center space-y-8">
            <!-- Bot√≥n de WhatsApp mejorado -->
            <a href="https://yamidtarot.online/grupo-whatsapp" 
               class="group relative flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5">
              <FaWhatsapp className="w-5 h-5" />
              <span class="font-medium">Unirse a la Comunidad</span>
            </a>
            
            <!-- T√≠tulo principal con estilo refinado -->
            <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white text-center leading-tight">
              Ideas para nuestra 
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-indigo-600 dark:from-purple-400 dark:to-indigo-400">
                comunidad
              </span>
            </h1>

            <!-- Descripci√≥n elegante -->
            <p class="text-lg text-gray-600 dark:text-gray-300 text-center max-w-2xl leading-relaxed">
              Un espacio dedicado a compartir ideas y enriquecer nuestra comunidad de 
              <span class="font-medium">Tarot, Caf√© y M√∫sica</span> üé¥ ‚ú® ‚òï
            </p>
          </div>
        </div>
      </header>

      <!-- Contenido Principal con dise√±o moderno -->
      <main class="container mx-auto px-4 pb-16">
        <div class="max-w-2xl mx-auto">
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl dark:shadow-gray-800/20 backdrop-blur-lg">
            <div class="p-6 sm:p-8">
              <IdeaForm client:load />
            </div>
          </div>
        </div>
      </main>

      <!-- Footer moderno y minimalista -->
      <footer class="container mx-auto px-4 py-8 mt-auto border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-2xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4">
          <nav class="flex gap-6">
            {footerLinks.map(link => (
              <a 
                href={link.href}
                class="text-sm text-gray-600 hover:text-purple-600 dark:text-gray-400 dark:hover:text-purple-400 transition-colors"
              >
                {link.text}
              </a>
            ))}
          </nav>

          <p class="text-sm text-gray-500 dark:text-gray-400">
            &copy; {currentYear} Yamid Rodriguez
          </p>
        </div>
      </footer>
    </div>
  </div>
</Layout>

<style>
  /* Animaci√≥n sutil para el bot√≥n de WhatsApp */
  @keyframes subtle-glow {
    0%, 100% { box-shadow: 0 5px 15px rgba(16, 185, 129, 0.2); }
    50% { box-shadow: 0 5px 25px rgba(16, 185, 129, 0.4); }
  }
  
  /* Estilos adicionales espec√≠ficos */
  :global(.dark) {
    color-scheme: dark;
  }

  /* Mejora en la legibilidad del texto */
  @supports (-webkit-background-clip: text) {
    .gradient-text {
      background-clip: text;
      -webkit-background-clip: text;
    }
  }
</style>