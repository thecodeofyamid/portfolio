---
import { FaPython, FaHtml5, FaCss3Alt, FaJs, FaReact, FaGitAlt, FaGithub, FaServer, FaDocker } from 'react-icons/fa';
import { SiFlask, SiMysql, SiNodedotjs, SiMongodb, SiTailwindcss, SiDjango, SiTensorflow, SiPytorch, SiKubernetes } from 'react-icons/si';
import type { IconType } from 'react-icons';
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yamid Tech | Innovación y Tecnología</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      /* Tus estilos CSS existentes */
      /* ... (omito para brevedad) ... */
    </style>
  </head>
  <body class="font-['Inter']" id="body">
    <!-- Header moderno con efecto glass con toggle de modo claro/oscuro -->
    <header id="main-header" class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
      <div class="glass-effect border-b">
        <div class="container mx-auto px-6 py-4">
          <div class="flex justify-between items-center">
            <a href="#" class="text-2xl font-['Space_Grotesk'] font-bold">
              <span class="text-gradient">YAMID TECH</span>
              <span class="text-gray-400">|</span>
              <span style="color: var(--header-text);">Innovación y Tecnología</span>
            </a>
            <nav class="hidden md:flex items-center space-x-8">
              <ul class="flex space-x-8">
                <li>
                  <a
                    href="#desarrollo"
                    style="color: var(--header-text);"
                    class="hover:text-[#00BCD4] transition-colors font-medium"
                  >
                    Proyectos
                  </a>
                </li>
                <li>
                  <a
                    href="#servicios"
                    style="color: var(--header-text);"
                    class="hover:text-[#00BCD4] transition-colors font-medium"
                  >
                    Servicios
                  </a>
                </li>
                <li>
                  <a
                    href="#comunidad"
                    style="color: var(--header-text);"
                    class="hover:text-[#00BCD4] transition-colors font-medium"
                  >
                    Comunidad
                  </a>
                </li>
                <li>
                  <a href="#contacto" class="button px-4 py-2 rounded-lg transition-colors">Contacto</a>
                </li>
              </ul>
              <button
                id="theme-toggle"
                class="ml-6 px-4 py-2 bg-gray-800 text-white rounded-lg transition duration-300"
              >
                Modo Claro
              </button>
            </nav>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Section con gradiente animado -->
    <section id="hero-section" class="gradient-bg-dark min-h-screen flex items-center pt-20">
      <div class="container mx-auto px-6 py-20">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="hero-heading text-5xl md:text-7xl font-['Space_Grotesk'] font-bold mb-6 leading-tight">
            Innovación Tecnológica &
            <span class="block text-[#00BCD4]">Desarrollo con Impacto</span>
          </h1>
          <p class="hero-subtext text-xl md:text-2xl mb-12 leading-relaxed">
            Fusionando creatividad, tecnología y desarrollo para crear soluciones que marcan la diferencia.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contacto" class="button px-8 py-4 rounded-lg font-medium transition-colors">
              Colabora con Nosotros
            </a>
            <a
              href="#portfolio"
              class="button px-8 py-4 bg-gray-800 rounded-lg font-medium hover:bg-gray-700 transition-colors"
            >
              Explora Proyectos
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Nueva Sección basada en referencia visual -->
    <section id="explore-section" class="py-20">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-4xl md:text-6xl font-['Space_Grotesk'] font-bold mb-6 leading-tight">
          Descubre el Poder de la <span class="text-gradient">Tecnología Transformadora</span>
        </h2>
        <p class="text-xl md:text-2xl mb-12">
          Proyectos que inspiran, soluciones que marcan la diferencia, todo impulsado por tecnología y pasión.
        </p>
        <div class="flex justify-center">
          <a href="#" id="video-button" class="button px-8 py-4 rounded-lg font-medium transition-colors">
            Ver Más
          </a>
        </div>
      </div>
    </section>

    <!-- Video Overlay Section -->
    <div id="video-overlay" class="video-overlay flex">
      <div class="video-content">
        <button id="close-video" class="close-video">&times;</button>
        <iframe
          id="video-iframe"
          width="100%"
          height="450"
          src="https://www.youtube.com/embed/rUDBkudQlrY"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>

    <!-- Sección de Servicios Populares -->
    <section id="servicios-populares" class="py-20">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-['Space_Grotesk'] font-bold text-center mb-8">
          Servicios Destacados
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Desarrollo de Software</h3>
            <p>Soluciones de software personalizadas para optimizar procesos y potenciar tu negocio.</p>
          </div>
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Consultoría Tecnológica</h3>
            <p>Asesoramiento estratégico en tecnología para ayudarte a lograr tus objetivos.</p>
          </div>
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Automatización de Procesos</h3>
            <p>Implementación de tecnologías que automatizan y mejoran la eficiencia de tu empresa.</p>
          </div>
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Desarrollo Web</h3>
            <p>Creación de sitios web modernos y dinámicos con un enfoque en experiencia de usuario.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- JavaScript con TypeScript -->
    <script lang="ts" is:inline>
      // Asegurarse de que el DOM esté completamente cargado antes de ejecutar el script
      document.addEventListener('DOMContentLoaded', () => {
        // Obtener los elementos del DOM y tiparlos correctamente
        const themeToggle = document.getElementById('theme-toggle') as HTMLButtonElement | null;
        const body = document.getElementById('body') as HTMLElement | null;
        const heroSection = document.getElementById('hero-section') as HTMLElement | null;
        const videoButton = document.getElementById('video-button') as HTMLAnchorElement | null;
        const videoOverlay = document.getElementById('video-overlay') as HTMLElement | null;
        const closeVideo = document.getElementById('close-video') as HTMLButtonElement | null;
        const videoIframe = document.getElementById('video-iframe') as HTMLIFrameElement | null;

        // Función para aplicar el tema
        function applyTheme(theme: 'light' | 'dark') {
          if (!body || !heroSection || !themeToggle) return;

          if (theme === 'light') {
            body.classList.remove('dark-mode');
            body.classList.add('light-mode');
            heroSection.classList.remove('gradient-bg-dark');
            heroSection.classList.add('gradient-bg-light');
            themeToggle.textContent = 'Modo Oscuro';
          } else {
            body.classList.remove('light-mode');
            body.classList.add('dark-mode');
            heroSection.classList.remove('gradient-bg-light');
            heroSection.classList.add('gradient-bg-dark');
            themeToggle.textContent = 'Modo Claro';
          }
        }

        // Aplicar el tema guardado en localStorage al cargar la página
        const savedTheme = localStorage.getItem('theme') as 'light' | 'dark' | null;
        if (savedTheme) {
          applyTheme(savedTheme);
        }

        // Evento para el toggle de tema
        if (themeToggle) {
          themeToggle.addEventListener('click', () => {
            if (!body || !heroSection) return;
            const newTheme: 'light' | 'dark' = body.classList.contains('dark-mode') ? 'light' : 'dark';
            applyTheme(newTheme);
            localStorage.setItem('theme', newTheme);
          });
        }

        // Funcionalidad para abrir el overlay del video
        if (videoButton && videoOverlay && videoIframe) {
          videoButton.addEventListener('click', (e) => {
            e.preventDefault();
            videoOverlay.style.display = 'flex';
            // Verificar si ya contiene el parámetro para evitar duplicados
            if (!videoIframe.src.includes('?autoplay=1')) {
              videoIframe.src += "?autoplay=1"; // Iniciar reproducción automática
            }
          });
        }

        // Funcionalidad para cerrar el overlay del video
        if (closeVideo && videoOverlay && videoIframe) {
          closeVideo.addEventListener('click', () => {
            videoOverlay.style.display = 'none';
            // Remover el parámetro de autoplay para detener el video
            videoIframe.src = videoIframe.src.replace("?autoplay=1", "");
          });
        }
      });
    </script>
  </body>
</html>
