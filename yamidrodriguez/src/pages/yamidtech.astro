<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yamid Tech | Innovación y Tecnología</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
      @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      .gradient-bg-dark {
        background: linear-gradient(-45deg, #34495E, #0D0D0D, #0c6ac2, #0D0D0D);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
      }

      .gradient-bg-light {
        background: linear-gradient(-45deg, #00BCD4, #FFFFFF, #B0E0E6,#E6F7FF);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
      }

      .glass-effect {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
      }

      .text-gradient {
        background: linear-gradient(to right, #34495E, #00BCD4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .hover-card {
        transition: all 0.3s ease;
      }

      .hover-card:hover {
        transform: translateY(-5px);
      }

      .dark-mode {
        --bg-primary: #121212;
        --text-primary: #E0E0E0;
        --card-bg: #1E1E1E;
        --button-bg: #00BCD4;
        --button-text: #FFFFFF;
        --header-bg: rgba(18, 18, 18, 0.9);
        --link-hover: #00BCD4;
        --header-text: #FFFFFF;
        --hero-heading: #00BCD4;
        --hero-subtext: #BBBBBB;
        --section-bg: #1A1A1A;
        --card-border: #333333;
      }

      .light-mode {
        --bg-primary: #F5F5F5;
        --text-primary: #34495E;
        --card-bg: #FFFFFF;
        --button-bg: #00BCD4;
        --button-text: #FFFFFF;
        --header-bg: rgba(255, 255, 255, 0.9);
        --link-hover: #00BCD4;
        --header-text: #34495E;
        --hero-heading: #00BCD4;
        --hero-subtext: #666666;
        --section-bg: #F5F5F5;
        --card-border: #D1D5DB;
      }

      body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
        transition: background-color 0.5s ease, color 0.5s ease;
      }

      .card {
        background-color: var(--card-bg);
        border: 1px solid var(--card-border);
        transition: background-color 0.5s ease, border-color 0.5s ease;
        padding: 20px;
        border-radius: 10px;
      }

      .button {
        background-color: var(--button-bg);
        color: var(--button-text);
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.5s ease, color 0.5s ease;
      }

      header {
        background-color: var(--header-bg);
        color: var(--header-text);
        transition: background-color 0.5s ease;
      }

      a {
        transition: color 0.3s ease;
      }

      a:hover {
        color: var(--link-hover);
      }

      .hero-heading {
        color: var(--hero-heading);
      }

      .hero-subtext {
        color: var(--hero-subtext);
      }

      section {
        background-color: var(--section-bg);
        transition: background-color 0.5s ease;
      }

      .video-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 1000;
        align-items: center;
        justify-content: center;
      }

      .video-content {
        position: relative;
        width: 80%;
        max-width: 800px;
        border-radius: 10px;
        overflow: hidden;
        transform: scale(0.5);
        animation: zoomIn 0.5s forwards;
      }

      @keyframes zoomIn {
        from {
          transform: scale(0.5);
          opacity: 0;
        }
        to {
          transform: scale(1);
          opacity: 1;
        }
      }

      .close-video {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #FFF;
        border: none;
        font-size: 1.5rem;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 50%;
      }
    </style>
  </head>
  <body class="font-['Inter']" id="body">
    <!-- Header moderno con efecto glass con toggle de modo claro/oscuro -->
    <header id="main-header" class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
      <div class="glass-effect border-b">
        <div class="container mx-auto px-6 py-4">
          <div class="flex justify-between items-center">
            <a href="#" class="text-2xl font-['Space_Grotesk'] font-bold">
              <span class="text-gradient">YAMID TECH</span>
              <span class="text-gray-400">|</span>
              <span style="color: var(--header-text);">Innovación y Tecnología</span>
            </a>
            <nav class="hidden md:flex items-center space-x-8">
              <ul class="flex space-x-8">
                <li><a href="#desarrollo" style="color: var(--header-text);" class="hover:text-[#00BCD4] transition-colors font-medium">Proyectos</a></li>
                <li><a href="#servicios" style="color: var(--header-text);" class="hover:text-[#00BCD4] transition-colors font-medium">Servicios</a></li>
                <li><a href="#comunidad" style="color: var(--header-text);" class="hover:text-[#00BCD4] transition-colors font-medium">Comunidad</a></li>
                <li><a href="#contacto" class="button px-4 py-2 rounded-lg transition-colors">Contacto</a></li>
              </ul>
              <button id="theme-toggle" class="ml-6 px-4 py-2 bg-gray-800 text-white rounded-lg transition duration-300">Modo Claro</button>
            </nav>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Section con gradiente animado -->
    <section id="hero-section" class="gradient-bg-dark min-h-screen flex items-center pt-20">
      <div class="container mx-auto px-6 py-20">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="hero-heading text-5xl md:text-7xl font-['Space_Grotesk'] font-bold mb-6 leading-tight">
            Innovación Tecnológica & 
            <span class="block text-[#00BCD4]">Desarrollo con Impacto</span>
          </h1>
          <p class="hero-subtext text-xl md:text-2xl mb-12 leading-relaxed">
            Fusionando creatividad, tecnología y desarrollo para crear soluciones que marcan la diferencia.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contacto" class="button px-8 py-4 rounded-lg font-medium transition-colors">
              Colabora con Nosotros
            </a>
            <a href="#portfolio" class="button px-8 py-4 bg-gray-800 rounded-lg font-medium hover:bg-gray-700 transition-colors">
              Explora Proyectos
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Nueva Sección basada en referencia visual -->
    <section id="explore-section" class="py-20">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-4xl md:text-6xl font-['Space_Grotesk'] font-bold mb-6 leading-tight">
          Descubre el Poder de la <span class="text-gradient">Tecnología Transformadora</span>
        </h2>
        <p class="text-xl md:text-2xl mb-12">
          Proyectos que inspiran, soluciones que marcan la diferencia, todo impulsado por tecnología y pasión.
        </p>
        <div class="flex justify-center">
          <a href="#" id="video-button" class="button px-8 py-4 rounded-lg font-medium transition-colors">
            Ver Más
          </a>
        </div>
      </div>
    </section>

    <!-- Video Overlay Section -->
    <div id="video-overlay" class="video-overlay flex">
      <div class="video-content">
        <button id="close-video" class="close-video">&times;</button>
        <iframe id="video-iframe" width="100%" height="450" src="https://www.youtube.com/embed/rUDBkudQlrY" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>

    <!-- Sección de Servicios Populares -->
    <section id="servicios-populares" class="py-20">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-['Space_Grotesk'] font-bold text-center mb-8">
          Servicios Destacados
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Desarrollo de Software</h3>
            <p>Soluciones de software personalizadas para optimizar procesos y potenciar tu negocio.</p>
          </div>
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Consultoría Tecnológica</h3>
            <p>Asesoramiento estratégico en tecnología para ayudarte a lograr tus objetivos.</p>
          </div>
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Automatización de Procesos</h3>
            <p>Implementación de tecnologías que automatizan y mejoran la eficiencia de tu empresa.</p>
          </div>
          <div class="card hover-card">
            <h3 class="text-xl font-bold mb-4">Desarrollo Web</h3>
            <p>Creación de sitios web modernos y dinámicos con un enfoque en experiencia de usuario.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- JavaScript -->
    <script>
      // Dark/Light mode toggle
      const themeToggle = document.getElementById('theme-toggle');
      const body = document.getElementById('body');
      const heroSection = document.getElementById('hero-section');
      const videoButton = document.getElementById('video-button');
      const videoOverlay = document.getElementById('video-overlay');
      const closeVideo = document.getElementById('close-video');
      const videoIframe = document.getElementById('video-iframe');

      // Check for saved theme in localStorage and apply it
      function applyTheme(theme) {
        if (theme === 'light') {
          body.classList.remove('dark-mode');
          body.classList.add('light-mode');
          heroSection.classList.remove('gradient-bg-dark');
          heroSection.classList.add('gradient-bg-light');
          themeToggle.textContent = 'Modo Oscuro';
        } else {
          body.classList.remove('light-mode');
          body.classList.add('dark-mode');
          heroSection.classList.remove('gradient-bg-light');
          heroSection.classList.add('gradient-bg-dark');
          themeToggle.textContent = 'Modo Claro';
        }
      }

      // Apply the saved theme on load
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme) {
        applyTheme(savedTheme);
      }

      themeToggle.addEventListener('click', () => {
        const newTheme = body.classList.contains('dark-mode') ? 'light' : 'dark';
        applyTheme(newTheme);
        localStorage.setItem('theme', newTheme);
      });

      // Video overlay open and close functionality
      videoButton.addEventListener('click', (e) => {
        e.preventDefault();
        videoOverlay.style.display = 'flex';
        videoIframe.src += "?autoplay=1"; // Start playing video when overlay opens
      });

      closeVideo.addEventListener('click', () => {
        videoOverlay.style.display = 'none';
        videoIframe.src = videoIframe.src.replace("?autoplay=1", ""); // Stop playing video when overlay closes
      });
    </script>
  </body>
</html>
